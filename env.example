# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_DATABASE_URL=https://your_project_id-default-rtdb.firebaseio.com/
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# Environment
EXPO_PUBLIC_ENV=development

# App Configuration
EXPO_PUBLIC_APP_NAME=SnapConnect
EXPO_PUBLIC_APP_VERSION=1.0.0

# Development Settings
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=debug

# API Configuration
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_UPLOAD_TIMEOUT=60000

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASHLYTICS=false

# Social Login (optional)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here

# Push Notifications
EXPO_PUBLIC_FCM_SENDER_ID=your_fcm_sender_id_here

# Media Configuration
EXPO_PUBLIC_MAX_PHOTO_SIZE=5242880  # 5MB in bytes
EXPO_PUBLIC_MAX_VIDEO_SIZE=52428800 # 50MB in bytes
EXPO_PUBLIC_MAX_VIDEO_DURATION=180  # 3 minutes in seconds

# Snap Configuration
EXPO_PUBLIC_SNAP_EXPIRY_HOURS=24
EXPO_PUBLIC_STORY_EXPIRY_HOURS=24
EXPO_PUBLIC_MAX_SNAP_DURATION=10    # seconds

# Performance
EXPO_PUBLIC_IMAGE_CACHE_SIZE=100    # MB
EXPO_PUBLIC_PRELOAD_IMAGES=true 