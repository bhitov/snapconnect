{
  "rules": {
    ".read": "true",
    ".write": "true",
    "users": {
      ".indexOn": ["username", "email"]
    },
    "friendships": {
      ".indexOn": ["user1Id", "user2Id", "createdAt"]
    },
    "friendRequests": {
      ".indexOn": ["senderId", "receiverId", "status", "createdAt"]
    },
    "textMessages": {
      ".indexOn": ["conversationId", "senderId", "recipientId", "createdAt"]
    },
    "snaps": {
      ".indexOn": ["conversationId", "senderId", "recipientId", "createdAt"]
    },
    "conversations": {
      ".indexOn": ["participants", "lastMessageAt"]
    }
  }
}
